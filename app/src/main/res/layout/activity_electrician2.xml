<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".electrician2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/o1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:text="Pricing and Terms"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/o2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="44dp"
            android:paddingLeft="44dp"
            android:layout_below="@+id/o1"
            android:layout_centerHorizontal="true"
            android:paddingTop="3dp"
            android:text="Free inspection by Technician. Ifservice taken,following rate card applies:-" />

        <TextView
            android:id="@+id/o3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_below="@id/o2"
            android:paddingTop="130dp"
            android:text="Hourly pricing"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/o4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o3"
            android:layout_below="@+id/o3"
            android:paddingTop="5dp"
            android:text="Upto 30 mins:          Rs199" />

        <TextView
            android:id="@+id/o5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o3"
            android:layout_below="@+id/o4"
            android:paddingTop="5dp"
            android:text="Upto 1 Hour:            Rs249" />

        <TextView
            android:id="@+id/o6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o3"
            android:layout_below="@+id/o5"
            android:paddingTop="5dp"
            android:text="Upto 1.5 Hour:         Rs349" />

        <TextView
            android:id="@+id/o7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o6"
            android:layout_below="@+id/o6"
            android:paddingTop="5dp"
            android:text="Upto 2 Hour:            Rs449" />

        <TextView
            android:id="@+id/o8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o3"
            android:layout_below="@+id/o7"
            android:paddingTop="5dp"
            android:text="Upto 2.5 Hour:         Rs549" />

        <TextView
            android:id="@+id/o9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o6"
            android:layout_below="@+id/o8"
            android:paddingTop="5dp"
            android:text="Upto 3 Hour:            Rs449" />

        <TextView
            android:id="@+id/o10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o6"
            android:layout_below="@+id/o9"
            android:paddingTop="5dp"
            android:text="After 3 Hour:            Rs50 per 30 mins" />

        <TextView
            android:id="@+id/o11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_below="@id/o10"
            android:paddingTop="350dp"
            android:text="Additional Cost"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/o12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="44dp"
            android:paddingLeft="44dp"
            android:layout_below="@+id/o11"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:text="Rs100 convenience fee for material procurement.                                                       Rs100 for every 60 minutes for helper(if required for complex work)"/>

        <TextView
            android:id="@+id/o13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_below="@id/o11"
            android:paddingTop="480dp"
            android:text="Note"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/o14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="44dp"
            android:paddingLeft="44dp"
            android:layout_below="@+id/o13"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:text="Sofa Upholstery,Wood Polishing and Aluminium Fabrication work is not included."/>

        <Button
            android:id="@+id/o15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-134dp"
            android:layout_toEndOf="@+id/o3"
            android:text="Next" />

        <Button
            android:id="@+id/o16"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Back" />

    </RelativeLayout>


</ScrollView>